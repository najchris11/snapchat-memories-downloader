{
  "name": "snapchat-memories-downloader-gui",
  "version": "0.1.5",
  "description": "A cross-platform GUI for downloading and organizing Snapchat Memories.",
  "author": "najchris11",
  "repository": "https://github.com/najchris11/snapchat-memories-downloader",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron-dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "electron-build": "next build && electron-builder",
    "pack-app": "npm run electron-build"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.6"
  },
  "devDependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.snapchat.memories.downloader",
    "productName": "Snapchat Memories Downloader",
    "files": [
      "out/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../installer.sh",
        "to": "installer.sh"
      },
      {
        "from": "../installer.ps1",
        "to": "installer.ps1"
      },
      {
        "from": "../requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "../api.py",
        "to": "api.py"
      },
      {
        "from": "../metadata.py",
        "to": "metadata.py"
      },
      {
        "from": "../combine_overlays.py",
        "to": "combine_overlays.py"
      },
      {
        "from": "../delete-dupes.py",
        "to": "delete-dupes.py"
      },
      {
        "from": "../snapchat-downloader.py",
        "to": "snapchat-downloader.py"
      },
      {
        "from": "../run_all.py",
        "to": "run_all.py"
      },
      {
        "from": "../utils.py",
        "to": "utils.py"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "identity": null
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
